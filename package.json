{
  "name": "cosmic-voyage",
  "version": "1.0.0",
  "description": "An immersive, space-themed interactive website exploring the wonders of our universe.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "a11y:check": "axe-core http://localhost:4000 --tags wcag2a,wcag2aa,wcag21aa",
    "lighthouse": "lighthouse http://localhost:4000 --output=html --output-path=./lighthouse-report.html --chrome-flags='--headless'",
    "qa": "npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clawson1717/cosmic-voyage.git"
  },
  "keywords": [
    "space",
    "cosmic",
    "interactive",
    "universe",
    "solar-system"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/cli": "^4.11.1",
    "@eslint/js": "^9.20.0",
    "@testing-library/dom": "^10.4.1",
    "axe-core": "^4.11.1",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "happy-dom": "^20.6.0",
    "jsdom": "^28.0.0",
    "lighthouse": "^12.4.0",
    "playwright-core": "^1.58.2",
    "prettier": "^3.5.0",
    "vite": "^6.1.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "gsap": "^3.14.2"
  }
}
